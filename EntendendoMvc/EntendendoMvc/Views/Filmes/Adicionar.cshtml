@model EntendendoMvc.Models.Filme

@{
    ViewData["Title"] = "Adicionar Novo Filme";


}
<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Adicionar">
            <div class="mb-3">
                <label asp-for="Titulo" class="form-label"></label>
                <input asp-for="Titulo" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="DataLancamento" class="form-label"></label>
                <input asp-for="DataLancamento" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="Genero" class="form-label"></label>
                <input asp-for="Genero" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="Valor" class="form-label"></label>
                <input asp-for="Valor" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="Avaliacao" class="form-label"></label>
                <input asp-for="Avaliacao" class="form-control" />
            </div>

            <div class="mb-3">
                <input type="submit" class="btn btn-primary mb-3" />
            </div>
            
        </form>
    </div>
</div>